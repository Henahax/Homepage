---
interface Props {
	transitionName: string
}

const { transitionName } = Astro.props
---

<div class="flex flex-col">
	<a class="link back rounded-xl p-2 hover:backdrop-blur-md" href="/">
		<i class="fa-solid fa-angle-left"></i>
		Zur√ºck
	</a>

	<div
		class="card flex flex-col gap-4 rounded-xl border border-neutral-500 p-4 shadow-2xl backdrop-blur-md"
		transition:name={transitionName}
	>
		<div class="cardHeader flex items-center justify-between gap-4 text-2xl">
			<div class="flex items-center gap-4 text-lg">
				<slot name="icon" />
				<slot name="title" />
			</div>
			<slot name="link" />
		</div>

		<div>
			<slot name="content" />
		</div>
	</div>
</div>

<style>
	.contentContainer {
		max-height: calc(100dvh - 10rem);
		overflow-y: auto;
	}

	.back {
		border: none;
	}
</style>
