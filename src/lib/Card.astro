---
interface Props {
	transitionName: string
}

const { transitionName } = Astro.props
---

<div class="flex flex-col">
	<a class="rounded-xl p-2" href="/">
		<i class="fa-solid fa-angle-left"></i>
		Zur√ºck
	</a>

	<div
		class="card flex flex-col gap-4 rounded-xl p-4 shadow-2xl"
		transition:name={transitionName}
	>
		<div class="cardHeader flex items-center justify-between gap-4 text-2xl">
			<div class="flex items-center gap-4 text-lg">
				<slot name="icon" />
