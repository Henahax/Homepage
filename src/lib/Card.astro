---
interface Props {
  transitionName: string;
}

const { transitionName } = Astro.props;
---

<div class="flex flex-col">
  <a class="link back p-2 rounded-xl hover:backdrop-blur-md" href="/">
    <i class="fa-solid fa-angle-left"></i>
    Zur√ºck
  </a>

  <div
    class="card flex flex-col p-4 rounded-xl gap-4 shadow-2xl backdrop-blur-md border border-neutral-500"
    transition:name={transitionName}
  >
    <div class="flex gap-4 items-center text-lg justify-between">
      <div class="flex gap-4 items-center">
        <slot name="icon"/>
        <slot name="title" />
      </div>
      <slot name="link" />
    </div>

    <div>
      <slot name="content" />
    </div>
  </div>
</div>

<style>
  .contentContainer {
    max-height: calc(100dvh - 10rem);
    overflow-y: auto;
  }

  .back {
    border: none;
  }
</style>
