---
import Layout from "../layouts/Layout.astro";
import Link from "../components/Link.astro";

import links from "../../public/links.json";
---

<Layout title="@henahax">
  <div class="p-6">
	<div class="p-6 text-center">
		<div class="bg-white rounded-full h-20 w-20 mx-auto my-4"></div>
		<div class="text-2xl">@henahax</div>
    <div class="">
      <i class="fa-solid fa-drumstick-bite"></i>
      <i class="fa-solid fa-code"></i>
      <i class="fa-solid fa-server"></i>
      <i class="fa-solid fa-atom"></i>
    </div>
	</div>
	<ul class="max-w-md mx-auto flex flex-col gap-4">
		{links.map((link) => <Link name={link.name} link={link.link} icon={link.icon} color={link.color} backgroundColor={link.backgroundColor} backgroundImage={link.backgroundImage}/>)}
	</ul>
</div>
</Layout>
