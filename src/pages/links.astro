---
import Layout from "../layouts/Layout.astro";
import Link from "@/components/Link.astro";

const links = [
  {
    name: "Webseite",
    link: "https://henahax.de",
    icons: "fa-solid fa-globe",
    color: "#262626",
    background: "#fff",
  },
  {
    name: "E-Mail",
    link: "mailto:mail@henahax.de",
    icons: "fa-solid fa-envelope",
    background: "#0085ff",
  },
];
---

<Layout title="henahax.de">
  <ul class="max-w-sm mx-auto flex flex-col gap-4">
    {
      links.map((link) => (
        <Link
          name={link.name}
          link={link.link}
          icons={link.icons}
          color={link.color}
          background={link.background}
        />
      ))
    }
  </ul>
</Layout>
