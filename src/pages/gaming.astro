---

<div class="card mx-auto w-full">
	<div role="tablist" class="tabs tabs-bordered tabs-lg mx-auto">
		<input
			type="radio"
			name="my_tabs_1"
			role="tab"
			class="tab"
			aria-label="active games"
			checked="checked"
		/>
		<div role="tabpanel" class="tab-content p-10">
			<div class="carousel carousel-center bg-neutral rounded-box max-w-md space-x-4 p-4">
				{active.map((id) => {
					const game = games.find((g) => g.id === id);
					return game ? <div class="carousel-item w-full">
				  {game.name}
				</div> : null;
				})}
				
			  </div>
		</div>

		<input type="radio" name="my_tabs_1" role="tab" class="tab" aria-label="recent history" />
		<div role="tabpanel" class="tab-content p-10">
			<ul>
				{history.map((id) => {
					const game = games.find((g) => g.id === id);
					return game ? <li>{game.name}</li> : null;
				})}
			</ul>
		</div>
	</div>
</div>
