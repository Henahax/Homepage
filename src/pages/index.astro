<Layout title="Henahax">
  <main class="">
    <section class="bg-yellow-500 w-full">todo</section>

    <section id="voice" class="bg-green-500">
      <h2 class="text-center text-2xl p-4">Henahax Voice Server</h2>

      <div
        class="container grid grid-cols-1 md:grid-cols-2 gap-4 w-fit mx-auto">
        <div class="card max-w-96">
          <h3 class="flex flex-row gap-2 items-center">
            <i class="fa-brands fa-teamspeak"></i>
            <span>TeamSpeak</span>
          </h3>
          <div id="ts3viewer_1124630" class="voice p-4"></div>
          <a class="button" href="ts3server://ts.henahax.de?port=9987"
            >Verbinden</a
          >
        </div>

        <div class="card max-w-96">
          <h3 class="flex flex-row gap-2 items-center">
            <i class="fa-brands fa-discord"></i>
            <span>Discord</span>
          </h3>
          <iframe
            id="discordWidget"
            class="voice"
            src="https://discord.com/widget?id=185552226998157313&theme=dark"
            allowtransparency="true"
            sandbox="allow-popups allow-popups-to-escape-sandbox allow-same-origin allow-scripts"
          ></iframe>
          <a class="button" href="https://discord.com/invite/26Kc9mJYKT"
            >Verbinden</a
          >
        </div>
      </div>
    </section>

    <section class="bg-red-500 w-full">
      <h2 class="text-center text-2xl p-4">Projekte</h2>
    </section>
  </main>
</Layout>

<style>
  section {
    @apply min-h-dvh p-8 pt-24;
    scroll-snap-align: start end;
  }

  section:last-child {
    @apply py-24;
  }

  h3 {
    @apply text-lg;
  }

  .card {
    @apply flex flex-col gap-4 bg-slate-600 rounded-3xl p-4;
  }

  .button {
    @apply mx-auto rounded-full bg-green-500 px-4 py-2;
  }

  .button:hover {
    @apply scale-105;
  }

  .voice {
    @apply w-full rounded-2xl h-full;
    min-height: 26rem;
  }

  #ts3viewer_1124630 {
    @apply bg-white;
  }
</style>

