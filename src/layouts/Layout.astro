---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header
      class="absolute w-full top-0 h-16 inline-flex justify-between items-center px-2 pl-7 text-black"
    >
      <a class="text-4xl font-bold" href="#">
        <h1>henahax</h1>
      </a>
      <nav id="menu" class="flex p-2 gap-x-4 items-center">
        <button id="closeButton" class="mnuButton w-12 h-12 rounded-full"
          ><i class="fa-solid fa-x"></i></button
        >
        <a href="#" class="navlink"><i class="fa-solid fa-house"></i>Home</a>
        <a href="#" class="navlink"
          ><i class="fa-brands fa-teamspeak"></i>TeamSpeak
        </a>
        <a href="#" class="navlink"
          ><i class="fa-brands fa-discord"></i>Discord</a
        >
        <a href="#" class="navlink"><i class="fa-solid fa-code"></i>Projekte</a>
        <a href="/links" class="navlink"><i class="fa-solid fa-at"></i>Links</a>
      </nav>
      <button id="menuButton" class="mnuButton w-12 h-12 rounded-full"
        ><i class="fa-solid fa-bars"></i></button
      >
    </header>
    <slot />
    <footer
      class="absolute flex z-10 -mt-16 bg-black bg-opacity-50 h-16 w-full justify-center items-center"
    >
      Â© henahax.de 2024
    </footer>
  </body>

  <style is:global>
    html {
      color-scheme: dark;
      font-family: monospace, system-ui, sans-serif;
    }

    header {
      position: fixed;
      transition: 0.5s;
    }

    header.sticky {
      @apply bg-black bg-opacity-50 text-white;
    }

    .navlink {
      @apply flex items-center gap-2 p-2 rounded-full w-full;
    }

    .navlink:hover {
      @apply bg-black bg-opacity-5;
    }

    #menuButton {
      display: block;
    }

    button {
      @apply bg-black bg-opacity-5;
    }

    button:hover {
      @apply bg-opacity-10;
    }

    #closeButton {
      @apply hidden ml-auto;
    }

    #menu {
      @apply hidden;
    }

    #menu.open {
      @apply fixed flex rounded-bl-3xl w-fit items-start top-0 right-0;
      background-color: gray;
      flex-direction: column;
      z-index: 999;
    }

    #menu.open #closeButton {
      display: block;
    }

    @media (min-width: 640px) {
      #menuButton {
        @apply hidden;
      }

      #menu {
        @apply flex;
      }
    }
  </style>

  <script>
    var closeButton = document.querySelector("#closeButton");
    var menu = document.querySelector("#menu");
    var menuButton = document.querySelector("#menuButton");

    menuButton?.addEventListener("click", function () {
      menu?.classList.add("open");
    });

    closeButton?.addEventListener("click", function () {
      menu?.classList.remove("open");
    });

    window.addEventListener("scroll", function () {
      var header = this.document.querySelector("header");
      header?.classList.toggle("sticky", window.scrollY > 0);
    });
  </script>
</html>
