---
import "@/styles/globals.css";

interface Props {
  title: string;
}

const { title } = Astro.props;

const currentPath = Astro.url.pathname;

const menuItems = [
  { href: "/", label: "Home", icon: "fa-solid fa-house" },
  { href: "/about", label: "About" },
  { href: "/services", label: "Services" },
  { href: "/contact", label: "Contact" },
];

console.log(currentPath);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.1/css/all.min.css"
      integrity="sha512-5Hs3dF2AEPkpNAR7UiOHba+lRSJNeM2ECkwxUIxC1Q/FLycGTbNapWXB4tP889k5T5Ju8fs4b1P5z/iB4nMfSQ=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body class="min-h-dvh flex flex-col">
    <app class="flex flex-col grow p-4 justify-center items-center">
      <slot />
    </app>

    <nav
      class="fixed bottom-4 w-fit self-center h-20 p-4 flex justify-center items-center rounded-xl border-neutral-400 border backdrop-blur-md"
    >
      <ul class="flex justify-center space-x-4">
        {
          menuItems.map((item) => (
            <li>
              <a
                href={item.href}
                class="border border-white backdrop-blur-lg"
              >
                <i class={item.icon} /> {item.label}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </body>
  <style is:global>
    :root {
      font-family: Consolas, monaco, monospace;
    }

    body {
      background-image: url("/cool-background.png");
      background-size: cover;
    }

    app {
      align-content: center;
    }

    nav ul li a {
      color: white;
      padding: 1rem;
      border-radius: 0.5rem;
    }
  </style>
</html>
