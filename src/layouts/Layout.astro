    <app class="max-w-4xl w-full grow self-center content-center p-4">

      
      <slot />
    </app>
  </body>
  
  <style is:global>
    @view-transition {
      navigation: auto;
    }

    body {
      position: relative;
      font-family: Consolas, monaco, monospace;
      color: var(--color-neutral-200);
      background-color: var(--color-neutral-800);
      background-image: url(./pexels-harold-vasquez-853421-2653362.jpg);
      background-size: cover;
      background-position: center center;
      background-repeat: no-repeat;
      background-attachment: fixed;
    }

    body::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(to left, rgba(0, 0, 0, 1), transparent);
      pointer-events: none;
    }

    body * {
      position: relative;
      z-index: 1;
    }

    a:hover {
      color: white;
    }

    .link {
      border: 1px solid var(--color-neutral-500)
    }

    .link:hover {
      border: 1px solid white;
      background-color: rgba(255, 255, 255, 0.05);
    }

    .tag {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      border-radius: calc(infinity * 1px);
      padding: 0 0.75rem;
      background-color: rgba(255, 255, 255, 0.1);
      color: white;
    }

    .tag:hover {
      background-color: rgba(255, 255, 255, 0.2);
    }


    #henahaxIcon {
    width: 3rem;
    height: 3rem;
    opacity: 0.75;
    -webkit-animation: sk-rotateplane 8s infinite ease-in-out;
    animation: sk-rotateplane 8s infinite ease-in-out, drop 0.75s ease-out forwards;
  }

  @-webkit-keyframes sk-rotateplane {
    0% {
      -webkit-transform: perspective(36rem);
    }
    100% {
      -webkit-transform: perspective(36rem) rotateX(360deg);
    }
  }

  @keyframes sk-rotateplane {
    0% {
      transform: perspective(36rem) rotateX(0deg) rotateY(0deg);
      -webkit-transform: perspective(36rem) rotateX(0deg) rotateY(0deg);
    }
    100% {
      transform: perspective(36rem) rotateY(-360.1deg) rotateX(0deg);
      -webkit-transform: perspective(36rem) rotateY(-360.1deg) rotateY(0deg);
    }
  }

  #henahax {
    animation: drop 0.75s ease-out forwards;
  }

  #tld {
    animation: drop 1.25s ease-out forwards;
  }

  @keyframes drop {
    from {
      top: -40px;
      opacity: 0;
    }
    to {
      top: 0px;
      opacity: 1;
    }
  }
  </style>
</html>
