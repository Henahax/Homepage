---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header
      class="absolute w-full top-0 h-16 inline-flex justify-between items-center px-2"
    >
      <a href="#">Logo</a>
      <nav id="menu" class="flex p-2 items-end gap-8">
        <button id="closeButton" class="mnuButton w-12 h-12 rounded-full"
          ><i class="fa-solid fa-x"></i></button
        >
        <a href="#" class="flex items-center gap-2"
          ><i class="fa-solid fa-house"></i>Home</a
        >
        <a href="#" class="flex items-center gap-2"
          ><i class="fa-brands fa-teamspeak"></i>TeamSpeak
        </a>
        <a href="#" class="flex items-center gap-2"
          ><i class="fa-brands fa-discord"></i>Discord</a
        >
        <a href="#" class="flex items-center gap-2"
          ><i class="fa-solid fa-code"></i>Projekte</a
        >
      </nav>
      <button id="menuButton" class="mnuButton w-12 h-12 rounded-full"
        ><i class="fa-solid fa-bars"></i></button
      >
    </header>
    <slot />
    <footer class="bg-green-500 bottom-0">Test</footer>
  </body>

  <style is:global>
    html {
      color-scheme: dark;
      font-family: system-ui, sans-serif;
    }

    header {
      position: fixed;
      transition: 0.5s;
    }

    header.sticky {
      @apply bg-black bg-opacity-50;
    }

    #menuButton {
      display: block;
    }

    button {
      background-color: rgba(0, 0, 0, 0.25);
    }

    #closeButton {
      display: none;
    }

    #menu {
      display: none;
    }

    #menu.open {
      position: fixed;
      display: flex;
      color: red;
      background-color: gray;
      flex-direction: column;
      height: 100dvh;
      top: 0;
      right: 0;
      width: 16rem;
    }

    #menu.open #closeButton {
      display: block;
    }

    @media (min-width: 640px) {
      #menuButton {
        display: none;
      }

      #menu {
        display: flex;
      }
    }
  </style>

  <script>
    var closeButton = document.querySelector("#closeButton");
    var menu = document.querySelector("#menu");
    var menuButton = document.querySelector("#menuButton");

    menuButton?.addEventListener("click", function () {
      menu?.classList.add("open");
    });

    closeButton?.addEventListener("click", function () {
      menu?.classList.remove("open");
    });

    window.addEventListener("scroll", function () {
      var header = this.document.querySelector("header");
      header?.classList.toggle("sticky", window.scrollY > 0);
    });
  </script>
</html>
