---
import "@/styles/globals.css";
import { ViewTransitions } from "astro:transitions";
import {Link} from "@/components/Link.tsx"

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.1/css/all.min.css" integrity="sha512-5Hs3dF2AEPkpNAR7UiOHba+lRSJNeM2ECkwxUIxC1Q/FLycGTbNapWXB4tP889k5T5Ju8fs4b1P5z/iB4nMfSQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <ViewTransitions />
  </head>
  <body class="dark min-h-dvh flex flex-col">
    <header class="inline-flex p-2 bg-neutral-900 items-center">
      <Link href='#' variant="ghost" className="text-2xl font-black">Henahax</Link>
      <ul class="inline-flex gap-2 grow justify-end">
        <li><Link href='/' variant="ghost">Home</Link></li>
        <li><Link href='/server' variant="ghost">Server</Link></li>
        <li><Link href='/gaming' variant="ghost">Gaming</Link></li>
        <li><Link href='/links' variant="ghost">Links</Link></li>
      </ul>
    </header>
    <app class="grow p-8">
      <slot />
    </app>
    <footer class="flex justify-center p-4 text-xs">Â© henahax.de 2024</footer>
  </body>
</html>
<style is:global>
  :root {
    font-family: Consolas, monaco, monospace;
  }
</style>
